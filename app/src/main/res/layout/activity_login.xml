<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@mipmap/image_login_bg"
        >
        
        <ImageView
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@mipmap/image_login_logo"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="70dp"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="账号登录"
        android:textColor="#076EED"
        android:layout_marginTop="22dp"
        android:layout_gravity="center_horizontal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:gravity="bottom"
        >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="16dp"
            android:src="@mipmap/ic_login_accountnumber"
            />

        <EditText
            android:id="@+id/etname"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入账号"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textSize="14sp"
            android:maxLines="1"
            android:gravity="bottom"
            android:inputType="text"
            />

        <ImageView
            android:id="@+id/iv_del"
            android:layout_width="36dp"
            android:layout_height="51dp"
            android:paddingTop="30dp"
            android:paddingLeft="16dp"
            android:layout_marginRight="23dp"
            android:src="@mipmap/ic_login_delate"
            android:visibility="invisible"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:gravity="bottom"
        >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="16dp"
            android:src="@mipmap/ic_login_password"
            />

        <EditText
            android:id="@+id/etpwd"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入密码"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textSize="14sp"
            android:maxLines="1"
            android:gravity="bottom"
            android:inputType="textPassword"
            />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="51dp"
            android:paddingTop="30dp"
            android:paddingLeft="16dp"
            android:layout_marginRight="23dp"
            android:src="@mipmap/ic_login_delate"
            android:visibility="invisible"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="109dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:text="登录"
        android:textSize="17sp"
        android:textColor="#fff"
        android:background="@drawable/login_un_bg"
        android:gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="网络配置"
        android:textColor="#076EED"
        android:layout_marginTop="7dp"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        />
</LinearLayout>